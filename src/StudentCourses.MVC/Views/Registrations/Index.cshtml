@model StudentCourses.MVC.ViewModels.RegistrationViewModel

@{
    ViewBag.Title = "Registrations";
}

<h2>Registrations</h2>

<p>
    @Html.ActionLink("Add New Registration", "Create")
</p>
<table class="table">
    <tr>
        <th>
            StudentId
        </th>
        <th>
            CourseId
        </th>
        <th>
            RegisterKey
            @*@Html.DisplayNameFor(model => model.RegisterKey)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CurrentRegistrations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterKey)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
            <td></td>
        </tr>
    }

</table>
